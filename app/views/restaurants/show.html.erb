<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.category.capitalize %></h2>
<div class="d-flex justify-content-between align-items-center">
 <div class="d-flex">
   <p class="mr-3"><%= @restaurant.address %></p>
   <p class="font-italic font-weight-bold mr-3"><%= @restaurant.phone_number %></p>
   <%= link_to @restaurant.capacity, capacity_restaurant_path(@restaurant) %>
 </div>
 <%= link_to "Add Review", new_restaurant_review_path(@restaurant) %>
</div>

<div class="border rounded p-3">
  <% @restaurant.reviews.each do |r| %>
    <%= link_to review_path(r) do %>
      <h2><%= r.content %></h2>
        <p><%= "*" * r.rating %></p>
        <% end %>
  <% end %>
</div>


